{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es5",
            "es2015"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "./dist/",
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
    },
    "include": [
        "./app/**/*"
    ],
    "experimentalDecorators": true
}
